<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootLayout"
        tools:context="com.example.kotlinandroidtest.MainActivity">

    <TextView
            android:layout_width="347dp"
            android:layout_height="21dp"
            android:text="@string/pageTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintVertical_bias="0.032"
            android:textAppearance="@style/TextAppearance.AppCompat" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/alarmToggle1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:maxLength="5"
            android:singleLine="true"
            android:ems="10"
            android:id="@+id/alarmTime1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/alarmToggle1" android:layout_marginStart="16dp"
            android:hint="@string/alarmDescription"
            />

    <ToggleButton
            android:text="@string/togglebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/alarmToggle2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/alarmToggle1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:maxLength="5"
            android:singleLine="true"
            android:ems="10"
            android:id="@+id/alarmTime2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/alarmToggle1"
            app:layout_constraintStart_toEndOf="@+id/alarmToggle2" android:layout_marginStart="16dp"
            android:hint="@string/alarmDescription"
    />

</android.support.constraint.ConstraintLayout>
